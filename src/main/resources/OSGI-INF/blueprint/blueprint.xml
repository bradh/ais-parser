<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">

	<bean id="transformer"
		class="org.codice.ddf.transform.ais.InputTransformer" />

	<service ref="transformer" interface="ddf.catalog.transform.InputTransformer">
		<service-properties>
			<entry key="id" value="ais" />
			<!-- List of mime type this InputTransformer supports -->
			<entry key="mime-type">
				<list>
				    <value>application/ais-nmea</value>
				</list>
			</entry>
		</service-properties>
	</service>

</blueprint>